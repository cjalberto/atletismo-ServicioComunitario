<% include ../../partials/head %>

<div class="section-center d-flex align-items-center justify-content-center flex-column content-gestionar">
	
    <div class="title text-center">
		<h1>CATEGORÍAS - MODIFICAR</h1>
	</div>

	<div class=container>
		<form class="text-center" action="/gestionar/categoria/modificar/<%= nombre %>" id="editCat">

			<div class="form-group row align-items-center">
				<label for="nombreCategoria" class="col-md-2 col-form-label">Nombre de Categoría:</label>
				<div class="col-md-10">
					<input type="text" class="form-control" name="nombre" placeholder="Nombre de Categoría" value="<%= nombre %>" required>
				</div>
			</div>
			
			<div class="form-group row align-items-center">
				<label for="descripcionCategoria" class="col-md-2 col-form-label">Descripción de Categoría:</label>
				<div class="col-md-10">
					<input type="text" class="form-control" name="descripcion" placeholder="Descripción de Categoría" value="<%= descripcion %>" required>
				</div>
			</div>

			<div class="form-row">
				<div class="form-group col-md-6">
					<div class="row">
						<label for="inputEdadMin" class="col-md-6 col-form-label">Edad Minima:</label>
						<div class="col-md-6">
							<input type="number" class="form-control" name="edad_min" value="<%= edad_min %>" required>
						</div>
					</div>
				</div>
				<div class="form-group col-md-6">
					<div class="row">
						<label for="inputEdadMax"  class="col-md-6 col-form-label">Edad Maxima:</label>
						<div class="col-md-6">
							<input type="number" class="form-control" name="edad_max" value="<%= edad_max %>" required>
						</div>
					</div>
				</div>
			</div>


			<button type="submit" class="btn btn-primary btn-lg">EDITAR</button>

		</form>
	   
    </div>

</div>


<% include ../../partials/foot %>