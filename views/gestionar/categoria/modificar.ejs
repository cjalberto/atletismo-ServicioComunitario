<% include ../../partials/head %>

<div class="section-center d-flex align-items-center justify-content-center flex-column content-gestionar">
	
    <div class="title text-center">
		<h1>CATEGORÍAS - MMODIFICAR</h1>
	</div>

	<div class=container>
		<form class="text-center" action="/gestionar/categoria/modificar/<%= id %>" id="editCat">

			<div class="form-group row align-items-center">
				<label for="nombreCategoria" class="col-md-2 col-form-label">Nombre de Categoría:</label>
				<div class="col-md-10">
					<input type="text" class="form-control" name="nombre" placeholder="Nombre de Categoría" value="<%= nombre %>" required>
				</div>
			</div>
			
			<div class="form-group row align-items-center">
				<label for="descripcionCategoria" class="col-md-2 col-form-label">Descripción de Categoría:</label>
				<div class="col-md-10">
					<input type="text" class="form-control" name="descripcion" placeholder="Descripción de Categoría" value="<%= descripcion %>" required>
				</div>
			</div>
			<div class="form-group row align-items-center">
				<label for="inputCategoria" class="col-md-2 col-form-label">Genero:</label>
						<div class="col-md-6">
							<select id="inputCategoria" name="sexo" class="form-control" required>
								<option value="Femenino" <% if(sexo == 'Femenino'){ %> selected="selected" <% } %> >Femenino </option>
								<option value="Masculino" <% if(sexo == 'Masculino'){ %> selected="selected" <% } %> >Masculino</option>
								<option value="Mixto" <% if(sexo == 'Mixto'){ %> selected="selected" <% } %> >Mixto</option>
							</select>
						</div>
			</div>
			<button type="submit" class="btn btn-secondary btn-lg">EDITAR</button>

		</form>
	   
    </div>

</div>


<% include ../../partials/foot %>