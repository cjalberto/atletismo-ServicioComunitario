<% include ../partials/head %>


<div class="section-center d-flex align-items-center justify-content-center flex-column content-carreras">

	<div class="title text-center">
		<h1>CARRERAS - CREAR</h1>
	</div>

	<div class="container">

		<div class="form-wrapper">
			<div class="form form--step1">
				<form onsubmit="return false;" class="text-center">

					<div class="form-group row align-items-center">
						<label for="inputNombreCompetencia" class="col-md-2 col-form-label">Nombre de Competencia:</label>
						<div class="col-md-10">
							<input type="text" class="form-control" id="inputNombreCompetencia" name="inputNombreCompetencia" placeholder="Nombre de Competencia">
						</div>
					</div>


					<div class="form-row">
						<div class="form-group col-md-6">
							<div class="row">
								<label for="inputFecha" class="col-md-2 col-form-label">Fecha:</label>
								<div class="col-md-10">
									<input type="date" class="form-control" id="inputFecha" name="inputFecha">
								</div>
							</div>
						</div>
						<div class="form-group col-md-6">
							<div class="row">
								<label for="inputHora"  class="col-md-2 col-form-label">Hora:</label>
								<div class="col-md-10">
									<input type="time" class="form-control" id="inputHora" name="inputHora">
								</div>
							</div>
						</div>
					</div>

					<div class="form-group row align-items-center">
						<label for="inputCategoria" class="col-md-2 col-form-label">Categoria</label>
						<div class="col-md-10">
							<select id="inputCategoria" name="inputCategoria" class="form-control">
								<option value="abierta">Abierta</option>
								<option value="masculina">Masculinaa</option>
								<option value="feminina">Femenina</option>
							</select>
						</div>
					</div>

					<button class="btn btn-secondary btn-lg btn-next ">Siguiente</button>

				</form>
			</div>
			<div class="form form--step2">
				<form class="text-center">

					<div class="row">
						<div class="col infoCarrer"><span id="nombreCarrera"></span></div>
						<div class="col infoCarrer"><span id="fechaCarrera"></span></div>
						<div class="col infoCarrer"><span id="categoriaCarrera"></span></div>
					</div>

					<div class="table-responsive">

						<table class="table table-striped table-bordered table-fixed display" style="width:100%" id="myTable" cellspacing="0" width="100%">

							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Nombre</th>
									<th scope="col">Categor√≠a</th>
									<th scope="col">Club</th>
								</tr>
							</thead>
							<tbody>
	


								<% for(var i=0; i<datosCompetidores.length; i++) {%>
								<tr>
									<th scope="row" class="idCompetidor"><%= datosCompetidores[i]['id'] %></th>
									<td><%= datosCompetidores[i]['primer_nombre'] %></td>
									<td><%= datosCompetidores[i]['primer_apellido'] %></td>
									<td><%= datosCompetidores[i]['club_nombre'] %></td>
								</tr>
								<% } %>
							</tbody>
						</table>
					</div>

					<div class="btn-container">
						<button class="btn btn-secondary btn-lg btn-back">Regresar</button>
						<button class="btn btn-secondary btn-lg btn-save">Guardar</button>
					</div>


				</form>
			</div>

		</div>

	</div>

</div>


<% include ../partials/foot %>